# ============================================================
# NYASACV PUBLIC DIRECTORY SECURITY
# ============================================================

# Security Headers
<IfModule mod_headers.c>
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always unset X-Powered-By
</IfModule>

# Disable directory listing
Options -Indexes

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Block hidden files and directories
    RewriteRule (^|/)\.(?!well-known) - [F,L]

    # Block dangerous file types
    RewriteRule ^.*\.(phtml|pht|php3|php4|php5|php7|php8|phps|phar|inc)$ - [F,L]

    # Block backup files
    RewriteRule ^.*\.(sql|bak|backup|old|log)$ - [F,L]

    # Laravel routing
    RewriteRule ^index\.php$ - [L]
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule . /index.php [L]
</IfModule>

# Block access to sensitive files in public
<FilesMatch "\.(env|htaccess|htpasswd|ini|log|sh|sql)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Deny from all
    </IfModule>
</FilesMatch>

# Disable PHP in uploads directory
<IfModule mod_rewrite.c>
    RewriteRule ^uploads/.*\.php$ - [F,L]
</IfModule>

# php -- BEGIN cPanel-generated handler, do not edit
